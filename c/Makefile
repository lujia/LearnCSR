########################################################################
# Compiler and external dependences
########################################################################
CC        = gcc

########################################################################
# Compiling and linking options
########################################################################
CFLAGS    = -g

LINKOPTS  = $(COPTS)
LIBS      = -lg2c -lm -lstdc++
LFLAGS    = $(LINKOPTS) $(LIBS)

########################################################################
# Rules for compiling the source files
########################################################################
.SUFFIXES: .c

.c:
	$(CC) $(CFLAGS) -c $<

.PHONY = clean

########################################################################
# List of all programs to be compiled
########################################################################

ALLPROGS = checkio

all: $(ALLPROGS)

default: checkio.o iosm.o
	$(CC) $^ -o checkio

checkio: checkio.o iosm.o
	$(CC) $^ -o checkio

########################################################################
# Clean up
########################################################################
clean:
	rm -f *.o
	rm -f *~

allclean:
	make clean
	rm -f checkio
